@model IEnumerable<Book>

<h2>Books</h2>
<div style="display: block">
    <a href="/Book/InsertBook/">Create a New Book</a>
</div>

<table class="table">
    <tr>
        <th>ID</th>
        <th>Title</th>
        <th>Author</th>

    </tr>

    @foreach (var book in Model)
    {
        <tr>
            <td><a href=/Book/ViewBook/@book.BookID>@book.BookID</a></td>
            <td>@book.Title</td>
            <td>@book.Author</td>
            <td>@book.BookID</td>

        </tr>
    }

</table>

